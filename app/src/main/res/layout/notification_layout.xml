<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/none"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/notifi_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/notifi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle"
            android:lines="1"
            android:text="Name"
            android:layout_marginBottom="@dimen/padding_7"
            android:textColor="@color/text_dark" />
        <TextView
            android:id="@+id/notifi_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small"
            android:text="轻松学英语"
            android:textColor="@color/text_black" />

    </LinearLayout>

    <ImageView
        android:id="@+id/notifi_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_skip_previous_grey" />

    <ImageView
        android:id="@+id/notifi_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_5"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_play_grey" />

    <ImageView
        android:id="@+id/notifi_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_skip_next_grey" />
</LinearLayout>