<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/none"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/notifi_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/notifi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/middle"
        android:lines="2"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:text="Name"
        android:textColor="@color/text_dark" />

    <ImageView
        android:id="@+id/notifi_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_skip_previous_grey" />

    <ImageView
        android:id="@+id/notifi_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_5"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_play_grey" />

    <ImageView
        android:id="@+id/notifi_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_skip_next_grey" />
</LinearLayout>