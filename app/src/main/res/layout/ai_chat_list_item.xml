<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_7"
    android:paddingRight="@dimen/padding_7">


    <TextView
        android:id="@+id/ai_chat_machine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/padding_12"
        android:layout_gravity="left"
        android:autoLink="all"
        android:background="@drawable/chat_bg_white"
        android:gravity="left"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/bigger" />


    <TextView
        android:id="@+id/ai_chat_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="@dimen/padding_12"
        android:autoLink="all"
        android:background="@drawable/chat_bg_green"
        android:gravity="right"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/bigger" />


</LinearLayout>