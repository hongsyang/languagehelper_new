<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/contentbg"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_7" >

        <FrameLayout
            android:id="@+id/xx_ad_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/padding_7"
            android:layout_marginLeft="@dimen/padding_7"
            android:layout_marginRight="@dimen/padding_7" >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/ad_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fresco:viewAspectRatio="1.77"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@color/text_tint"
                fresco:placeholderImageScaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广告"
                android:textColor="@color/white"
                android:background="@color/none_alpha"
                android:textSize="@dimen/smaller"

                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:id="@+id/cailing_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="1px"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_15"
                    android:paddingTop="@dimen/padding_15"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_0020"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/padding_7"
                        android:gravity="center"
                        android:lines="1"
                        android:text="@string/leisuer_one"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/middle" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/baidu_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="1px"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_15"
                    android:paddingTop="@dimen/padding_15"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_0019"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/padding_7"
                        android:gravity="center"
                        android:lines="1"
                        android:text="@string/leisuer_duanzi"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/middle" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/sougou_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_15"
                    android:paddingTop="@dimen/padding_15"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_0018"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/padding_7"
                        android:gravity="center"
                        android:lines="1"
                        android:text="@string/title_tuling_ai"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/middle" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:id="@+id/yuedu_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="1px"
            android:foreground="@drawable/framelayout_selector"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_15"
                android:paddingTop="@dimen/padding_15"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_0017"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/padding_7"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/leisuer_reading"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/news_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="1px"
            android:foreground="@drawable/framelayout_selector"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_15"
                android:paddingTop="@dimen/padding_15"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_0016"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/padding_7"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/foreign_website"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle" />
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/twists_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="@drawable/framelayout_selector"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_15"
                android:paddingTop="@dimen/padding_15"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_0015"
