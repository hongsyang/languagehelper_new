                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/padding_7"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/leisuer_twists"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:id="@+id/game_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="1px"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_15"
                    android:paddingTop="@dimen/padding_15"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_0014"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/padding_7"
                        android:gravity="center"
                        android:lines="1"
                        android:text="@string/leisuer_yizhandaodi"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/middle" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/shenhuifu_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="1px"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_15"
                    android:paddingTop="@dimen/padding_15"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_0013"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/padding_7"
                        android:gravity="center"
                        android:lines="1"
                        android:text="@string/leisuer_shenhuifu"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/middle" />
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/app_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_15"
                    android:paddingTop="@dimen/padding_15"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_0012"
                        />
                    <TextView
                        android:layout_width="fill_parent"
