<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentbg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/contentbg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/padding_7"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fm_radio_local"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:drawableTop="@drawable/icon_radio_local"
                    android:gravity="center"
                    android:text="@string/radio_local"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fm_radio_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:drawableTop="@drawable/icon_radio_country"
                    android:gravity="center"
                    android:text="@string/radio_country"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fm_radio_province"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:drawableTop="@drawable/icon_radio_province"
                    android:gravity="center"
                    android:text="@string/radio_province"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fm_radio_internet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:drawableTop="@drawable/icon_radio_internet"
                    android:gravity="center"
                    android:text="@string/radio_internet"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle" />
            </FrameLayout>

        </LinearLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/auto_wrap_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_7"
            app:alignContent="flex_start"
            app:alignItems="center"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            app:showDivider="beginning|middle">
        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:layout_marginTop="@dimen/padding_7"
            android:padding="@dimen/padding_10"
            android:background="@color/white"
            android:textSize="@dimen/biggerx"
            android:text="@string/rank"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lightgrey"
            />
        <LinearLayout
            android:id="@+id/rank_radio_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>